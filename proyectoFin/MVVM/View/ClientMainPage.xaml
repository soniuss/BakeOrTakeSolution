<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:proyectoFin.MVVM.ViewModel"
             xmlns:models="clr-namespace:Domain.Model;assembly=Domain.Model"
             x:Class="proyectoFin.MVVM.View.ClientMainPage"
             Title="BakeOrTake - Cliente"
             BackgroundColor="#FFE7EA">

    <Grid RowDefinitions="Auto,*" ColumnDefinitions="Auto,*">
        <Border Grid.Row="0" Grid.ColumnSpan="2" BackgroundColor="#FDF1EB" Padding="15">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="0,0,15,15"/>
            </Border.StrokeShape>
            <Label Text="BakeOrTake"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#5C4033"
                   HorizontalOptions="Start"/>
        </Border>

        <Border Grid.Row="1" Grid.Column="0"
                BackgroundColor="#FDF1EB"
                WidthRequest="200"
                StrokeThickness="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="0,15,15,0"/>
            </Border.StrokeShape>
            <VerticalStackLayout Padding="15" Spacing="20" VerticalOptions="Start">
                <Image Source="OsitoBakeOrTake.jpg"
                       HeightRequest="80"
                       WidthRequest="80"
                       Aspect="AspectFit"
                       Margin="0,10,0,20"/>

                <Button Text="Mi Perfil"
                        Style="{StaticResource MenuButtonStyle}"
                        Command="{Binding MiPerfilCommand}"/>

                <Button Text="Mis Recetas"
                        Style="{StaticResource MenuButtonStyle}"
                        Command="{Binding MisRecetasCommand}"/>

                <Button Text="Mis Favoritos"
                        Style="{StaticResource MenuButtonStyle}"
                        Command="{Binding MisFavoritosCommand}"/>

                <Button Text="Cerrar SesiÃ³n"
                        Style="{StaticResource MenuButtonStyle}"
                        BackgroundColor="#FF6F61"
                        TextColor="#FFF5E1"
                        Command="{Binding CerrarSesionCommand}"
                        Margin="0,50,0,0"/>

            </VerticalStackLayout>
        </Border>

        <VerticalStackLayout Grid.Row="1" Grid.Column="1" Padding="20" Spacing="15">
            <Label Text="Explora nuestras recetas"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#5C4033"
                   HorizontalOptions="Center"/>

            <CollectionView ItemsSource="{Binding Recetas}"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedReceta}"
                            SelectionChangedCommand="{Binding SelectRecetaCommand}">
                <CollectionView.EmptyView>
                    <Label Text="No hay recetas disponibles en este momento."
                           FontSize="18"
                           TextColor="#7A5E48"
                           HorizontalOptions="Center"
                           VerticalOptions="CenterAndExpand"/>
                </CollectionView.EmptyView>
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="10"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Receta">
                        <Border BackgroundColor="#FDF1EB"
                                Padding="15"
                                Margin="5"
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Brush="Black" Opacity="0.1" Offset="5,5" Radius="10"/>
                            </Border.Shadow>
                            <Grid ColumnDefinitions="100,*" RowDefinitions="Auto,Auto">
                                <Image Grid.Column="0" Grid.RowSpan="2"
                                       Source="{Binding imagenUrl}"
                                       Aspect="AspectFill"
                                       HeightRequest="90"
                                       WidthRequest="90"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       Margin="0,0,10,0"/>
                                <Label Grid.Column="1" Grid.Row="0"
                                       Text="{Binding nombre}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="#5C4033"/>
                                <Label Grid.Column="1" Grid.Row="1"
                                       Text="{Binding descripcion}"
                                       FontSize="14"
                                       TextColor="#7A5E48"
                                       MaxLines="2"
                                       LineBreakMode="TailTruncation"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </Grid>

    <ContentPage.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="TextColor" Value="#5C4033"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="HeightRequest" Value="50"/>
            <Setter Property="BorderColor" Value="#7A5E48"/>
            <Setter Property="BorderWidth" Value="1"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </ContentPage.Resources>
</ContentPage>