<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:proyectoFin.MVVM.ViewModel"
             xmlns:converters="clr-namespace:proyectoFin.Converters"
             x:Class="proyectoFin.MVVM.View.RecipeFormPage"
             Title="{Binding IsNewRecipe, Converter={StaticResource BoolToStringConverter}, ConverterParameter='Nueva Receta|Editar Receta'}"
             BackgroundColor="#FFE7EA">

    <ContentPage.Resources>
        <converters:StringIsNullOrEmptyConverter x:Key="StringIsNullOrEmptyConverter" />
        <converters:BoolToStringConverter x:Key="BoolToStringConverter" />


        <Style TargetType="Border">
            <Setter Property="StrokeShape">
                <Setter.Value>
                    <RoundRectangle CornerRadius="10"/>
                </Setter.Value>
            </Setter>
            <Setter Property="StrokeThickness" Value="0"/>
            <Setter Property="BackgroundColor" Value="#FDF1EB"/>
            <Setter Property="Padding" Value="15,0"/>
        </Style>

        <Style TargetType="Entry">
            <Setter Property="TextColor" Value="#5C4033"/>
            <Setter Property="PlaceholderColor" Value="#7A5E48"/>
            <Setter Property="HeightRequest" Value="50"/>
        </Style>

        <Style TargetType="Editor">
            <Setter Property="TextColor" Value="#5C4033"/>
            <Setter Property="PlaceholderColor" Value="#7A5E48"/>
            <Setter Property="AutoSize" Value="TextChanges"/>
            <Setter Property="HeightRequest" Value="100"/>
        </Style>

    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="CenterAndExpand">

            <Label Text="{Binding IsNewRecipe, Converter={StaticResource BoolToStringConverter}, ConverterParameter='Nueva Receta|Editar Receta'}"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#5C4033"/>

            <Border>
                <Entry Placeholder="Nombre de la Receta" Text="{Binding Nombre}" />
            </Border>

            <Border>
                <Editor Placeholder="Descripción de la Receta" Text="{Binding Descripcion}" />
            </Border>

            <Border>
                <Editor Placeholder="Ingredientes (separados por comas o líneas)" Text="{Binding Ingredientes}" />
            </Border>

            <Border>
                <Editor Placeholder="Pasos de Preparación" Text="{Binding Pasos}" />
            </Border>

            <Border>
                <Entry Placeholder="URL de la Imagen (opcional)" Text="{Binding ImagenUrl}" Keyboard="Url" />
            </Border>

            <Button Text="{Binding SaveButtonText}"
                    Command="{Binding SaveRecipeCommand}"
                    IsEnabled="{Binding IsNotBusy}"
                    BackgroundColor="#5C4033" TextColor="#FFF5E1" CornerRadius="15"
                    HeightRequest="55"
                    FontSize="18"
                    FontAttributes="Bold"/>

            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}"
                               Color="#FF6F61" HorizontalOptions="Center" />

            <Label Text="{Binding ErrorMessage}"
                   TextColor="#FF6F61" HorizontalOptions="Center"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringIsNullOrEmptyConverter}}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>