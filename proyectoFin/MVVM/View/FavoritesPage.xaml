<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:proyectoFin.MVVM.ViewModel"
             xmlns:model="clr-namespace:Domain.Model;assembly=Domain.Model"
             x:DataType="viewmodel:FavoritesViewModel" x:Class="proyectoFin.MVVM.View.FavoritesPage"
             Title="Mis Favoritos">

    <VerticalStackLayout Spacing="20" Padding="20">
        <Label Text="Mis Recetas Favoritas"
               FontSize="Title"
               HorizontalOptions="Center" />

        <CollectionView ItemsSource="{Binding FavoriteRecipes}"
                        SelectionMode="Single"
                        SelectionChangedCommand="{Binding SelectFavoriteRecipeCommand}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Receta">
                    <Frame Margin="10" Padding="15" CornerRadius="10" HasShadow="True">
                        <Label Text="{Binding nombre}" FontSize="Medium" FontAttributes="Bold" />
                        <Label Text="{Binding descripcion}" FontSize="Small" TextColor="Gray" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>