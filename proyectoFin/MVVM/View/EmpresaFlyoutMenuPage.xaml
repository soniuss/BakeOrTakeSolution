<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proyectoFin.MVVM.View.EmpresaFlyoutMenuPage"
             Title="Menú Empresa"
             BackgroundColor="#F2F2F2" >

    <ContentPage.Resources>
        <Style TargetType="Button" x:Key="MenuButtonStyle">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="#333333" />
            <Setter Property="FontSize" Value="Medium" />
            <Setter Property="HorizontalOptions" Value="Start" />
            <Setter Property="Padding" Value="10,15" />
            <Setter Property="Margin" Value="0,5" />
        </Style>
    </ContentPage.Resources>

    <VerticalStackLayout Spacing="10" Padding="20">
        <Label Text="BakeOrTake - Empresa"
               FontSize="Large"
               FontAttributes="Bold"
               Margin="0,20,0,10"
               HorizontalOptions="Center" />

        <Label Text="Panel de gestión"
               FontSize="Small"
               TextColor="Gray"
               HorizontalOptions="Center"
               Margin="0,0,0,30" />

        <Button Text="Mis Pedidos"
                Style="{StaticResource MenuButtonStyle}"
                Command="{Binding NavigateToMyOrdersCommand}" />
        <Button Text="Gestionar Recetas"
                Style="{StaticResource MenuButtonStyle}"
                Command="{Binding NavigateToManageRecipesCommand}" />
        <Button Text="Perfil de Empresa"
                Style="{StaticResource MenuButtonStyle}"
                Command="{Binding NavigateToCompanyProfileCommand}" />
        <Border StrokeShape="RoundRectangle 20" Stroke="Transparent" BackgroundColor="#E0BBE4"
                HorizontalOptions="FillAndExpand" Margin="0,30,0,0">
            <Button Text="Cerrar Sesión"
                    TextColor="White"
                    BackgroundColor="#E0BBE4"
                    FontSize="Medium"
                    FontAttributes="Bold"
                    CornerRadius="20"
                    Command="{Binding LogoutCommand}" />
        </Border>
    </VerticalStackLayout>
</ContentPage>