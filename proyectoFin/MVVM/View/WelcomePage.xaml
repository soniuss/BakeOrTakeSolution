<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:proyectoFin.MVVM.ViewModel"
             x:Class="proyectoFin.MVVM.View.WelcomePage"
             Title="WelcomePage"
             BackgroundColor="#FFE7EA">
    <Grid RowDefinitions="*,Auto,Auto,Auto,*"
          ColumnDefinitions="*"
          Padding="20"
          VerticalOptions="CenterAndExpand"
          HorizontalOptions="CenterAndExpand">

        <Image Grid.Row="1"
               Source="osito_bakeortake.png" HeightRequest="200"
               WidthRequest="200"
               HorizontalOptions="Center"
               Margin="0,0,0,20" />

        <Label Grid.Row="2"
               Text="BakeOrTake"
               FontSize="48"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               TextColor="#5C4033" Margin="0,0,0,40" />

        <Button Grid.Row="3"
                Text="Iniciar SesiÃ³n"
                Clicked="OnLoginButtonClicked"
                Margin="0,0,0,10"
                HorizontalOptions="Fill"
                BackgroundColor="#5C4033" TextColor="#FFF5E1" CornerRadius="15"
                HeightRequest="55"
                FontSize="20"
                FontAttributes="Bold"/>

        <Button Grid.Row="4"
                Text="Registrarse"
                Clicked="OnRegisterButtonClicked"
                HorizontalOptions="Fill"
                BackgroundColor="#FF8FAB" TextColor="#5C4033" CornerRadius="15"
                HeightRequest="55"
                FontSize="20"
                FontAttributes="Bold"/>
    </Grid>
</ContentPage>