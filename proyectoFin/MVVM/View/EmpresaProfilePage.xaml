<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:proyectoFin.MVVM.ViewModel"
             x:Class="proyectoFin.MVVM.View.EmpresaProfilePage"
             Title="Perfil de Empresa"
             BackgroundColor="#FFE7EA">

    <ContentPage.Resources>
        <Style TargetType="Border">
            <Setter Property="StrokeShape">
                <Setter.Value>
                    <RoundRectangle CornerRadius="10"/>
                </Setter.Value>
            </Setter>
            <Setter Property="StrokeThickness" Value="0"/>
            <Setter Property="BackgroundColor" Value="#FDF1EB"/>
            <Setter Property="Padding" Value="15,0"/>
        </Style>

        <Style TargetType="Entry">
            <Setter Property="TextColor" Value="#5C4033"/>
            <Setter Property="PlaceholderColor" Value="#7A5E48"/>
            <Setter Property="HeightRequest" Value="50"/>
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <Grid RowDefinitions="Auto,Auto,Auto"
              Padding="20"
              RowSpacing="20">

            <Label Text="Perfil de Empresa"
                   TextColor="#5C4033"
                   FontSize="32"
                   FontAttributes="Bold"
                   Margin="0,0,0,20"/>

            <VerticalStackLayout Grid.Row="1" Spacing="15">
                <Label Text="Email"
                       TextColor="#7A5E48"
                       FontAttributes="Bold"/>
                <Border>
                    <Entry Text="{Binding Email}" Keyboard="Email" IsReadOnly="True" />
                </Border>

                <Label Text="Nombre del Negocio"
                       TextColor="#7A5E48"
                       FontAttributes="Bold"/>
                <Border>
                    <Entry Text="{Binding NombreNegocio}"/>
                </Border>

                <Label Text="Ubicación"
                       TextColor="#7A5E48"
                       FontAttributes="Bold"/>
                <Border>
                    <Entry Text="{Binding Ubicacion}"/>
                </Border>

                <Label Text="Descripción"
                       TextColor="#7A5E48"
                       FontAttributes="Bold"/>
                <Border>
                    <Editor Text="{Binding Descripcion}"
                            TextColor="#5C4033"
                            AutoSize="TextChanges"
                            HeightRequest="100"/>
                </Border>
            </VerticalStackLayout>

            <Button Grid.Row="2"
                    Text="Guardar Cambios"
                    Command="{Binding SaveChangesCommand}"
                    IsEnabled="{Binding IsNotBusy}"
                    BackgroundColor="#5C4033"
                    TextColor="#FFF5E1"
                    CornerRadius="15"
                    HeightRequest="55"
                    FontSize="18"
                    FontAttributes="Bold"
                    Margin="0,20,0,0"/>

            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}"
                               Color="#FF6F61"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Grid.Row="1" />

            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   HorizontalOptions="Center"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringIsNullOrEmptyConverter}, ConverterParameter='True'}"
                   Grid.Row="2"
                   Margin="0,10,0,0"/>

        </Grid>
    </ScrollView>
</ContentPage>